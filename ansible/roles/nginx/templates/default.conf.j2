server {
        listen          80;
        server_name     {{ default_domain }};
        root            /srv/www;
        index           index.php;

        client_max_body_size 500M;

        location / {
            index index.php;
        }

        location ~ \.htaccess {
            deny all;
        }
        
        location ~ \.php$ {
                try_files $uri =404;                
                fastcgi_index index.php;
                fastcgi_pass  unix:/var/run/php-fpm/www.sock;                
                include       fastcgi_params;
        }
        
        location ~ /\.ht {
            deny  all;
        }

        location ~ /\.svn {
            deny  all;
        }

}